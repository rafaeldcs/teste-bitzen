@model teste.Models.AbastecimentoModels
@{
    var listVeiculos = Model.listVeiculo.Select(x => new SelectListItem()
    {
        Text = x.NomeVeiculo,
        Value = x.Id.ToString(),
        Selected = Model.item.VeiculoId == x.Id
    });

    var listMotorista = Model.listMotorista.Select(x => new SelectListItem()
    {
        Text = x.Nome,
        Value = x.Id.ToString(),
        Selected = Model.item.MotoristaId == x.Id
    });
}

<form asp-controller="Abastecimento" asp-action="Edit" method="post">
    <div class="form-group row">
        <label for="VeiculoId" class="col-sm-2 col-form-label">Veiculo</label>
        <div class="col-sm-10">
            <select name="VeiculoId" asp-items="@listVeiculos" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <label for="CategoriaCNH" class="col-sm-2 col-form-label">Motorista</label>
        <div class="col-sm-10">
            <select name="MotoristaId" asp-items="@listMotorista" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <label for="Data" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input type="date" name="Data" class="form-control" id="Data" placeholder="Data" value="@(Convert.ToDateTime(Model.item.Data).ToString("yyyy-MM-dd"))">
        </div>
    </div>
    <div class="form-group row">
        <label for="TipoCombustivel" class="col-sm-2 col-form-label">TipoCombustivel</label>
        <div class="col-sm-10">
            <input type="text" name="TipoCombustivel" class="form-control" id="TipoCombustivel" placeholder="TipoCombustivel" value="@Model.item.TipoCombustivel">
        </div>
    </div>
    <div class="form-group row">
        <label for="QuantidadeAbastecida" class="col-sm-2 col-form-label">Quantidade Abastecida</label>
        <div class="col-sm-10">
            <input type="text" name="QuantidadeAbastecida" class="form-control" id="QuantidadeAbastecida" placeholder="QuantidadeAbastecida" value="@Model.item.QuantidadeAbastecida">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>        
    </div>
</form>