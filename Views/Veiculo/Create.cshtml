<form asp-controller="Veiculo" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Placa">Placa</label>
        <input type="text" class="form-control" id="Placa" name="Placa" placeholder="Placa">
    </div>
    <div class="form-group">
        <label for="CPF">NomeVeiculo</label>
        <input type="text" class="form-control" id="NomeVeiculo" name="NomeVeiculo" placeholder="NomeVeiculo">
    </div>
    <div class="form-group">
        <label for="TipoCombustivel">TipoCombustivel</label>
        <input type="text" class="form-control" id="TipoCombustivel" name="TipoCombustivel" placeholder="TipoCombustivel">
    </div>
    <div class="form-group">
        <label for="Fabricante">Fabricante</label>
        <input type="text" class="form-control" id="Fabricante" name="Fabricante" placeholder="Fabricante">
    </div>
    <div class="form-group">
        <label for="AnoFabricacao">AnoFabricacao</label>
        <input type="text" class="form-control" id="AnoFabricacao" name="AnoFabricacao" placeholder="AnoFabricacao" maxlength="4">
    </div>
    <div class="form-group">
        <label for="CapacidadeTanque">CapacidadeTanque</label>
        <input type="text" class="form-control" id="CapacidadeTanque" name="CapacidadeTanque" placeholder="CapacidadeTanque" maxlength="20">
    </div>
    <div class="form-group">
        <label for="Observacoes">Observacoes</label>
        <input type="text" class="form-control" id="Observacoes" name="Observacoes" placeholder="Observacoes">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
</form>