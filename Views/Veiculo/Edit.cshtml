@model teste.Models.VeiculoModel

<form asp-controller="Veiculo" asp-action="Edit" method="post">
    <input name="id" type="hidden" value="@Model.Id" />
    <div class="form-group">
        <label for="Placa">Placa</label>
        <input type="text" class="form-control" id="Placa" name="Placa" placeholder="Placa" value="@Model.Placa">
    </div>
    <div class="form-group">
        <label for="CPF">NomeVeiculo</label>
        <input type="text" class="form-control" id="NomeVeiculo" name="NomeVeiculo" placeholder="NomeVeiculo" value="@Model.NomeVeiculo">
    </div>
    <div class="form-group">
        <label for="TipoCombustivel">TipoCombustivel</label>
        <input type="text" class="form-control" id="TipoCombustivel" name="TipoCombustivel" placeholder="TipoCombustivel" value="@Model.TipoCombustivel">
    </div>
    <div class="form-group">
        <label for="Fabricante">Fabricante</label>
        <input type="text" class="form-control" id="Fabricante" name="Fabricante" placeholder="Fabricante" value="@Model.Fabricante">
    </div>
    <div class="form-group">
        <label for="AnoFabricacao">AnoFabricacao</label>
        <input type="text" class="form-control" id="AnoFabricacao" name="AnoFabricacao" placeholder="AnoFabricacao" value="@Model.AnoFabricacao">
    </div>
    <div class="form-group">
        <label for="CapacidadeTanque">CapacidadeTanque</label>
        <input type="text" class="form-control" id="CapacidadeTanque" name="CapacidadeTanque" placeholder="CapacidadeTanque" value="@Model.CapacidadeTanque">
    </div>
    <div class="form-group">
        <label for="Observacoes">Observacoes</label>
        <input type="text" class="form-control" id="Observacoes" name="Observacoes" placeholder="Observacoes" value="@Model.Observacoes">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
</form>